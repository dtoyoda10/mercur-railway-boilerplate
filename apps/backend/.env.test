# Test environment configuration
# These values are used when running tests via Jest

NODE_ENV=test

# Test database - use a separate DB to avoid messing with your dev data
DATABASE_URL=postgres://postgres:postgres@localhost:5432/medusa_test

# Simple test secrets (don't need to be super secure for tests)
JWT_SECRET=test-jwt-secret-for-testing
COOKIE_SECRET=test-cookie-secret-for-testing

# CORS - just use localhost for tests
STORE_CORS=http://localhost:8000
ADMIN_CORS=http://localhost:7000
VENDOR_CORS=http://localhost:7000
AUTH_CORS=http://localhost:9000,http://localhost:7000,http://localhost:8000

# Redis is optional for tests - most tests will work without it
# Uncomment if you need it for specific test scenarios
# REDIS_URL=redis://localhost:6379

# Port for test server (if running integration tests)
PORT=9000

# Skip external service integrations in tests
# Add mock keys or leave them empty - tests should mock these anyway
STRIPE_SECRET_API_KEY=sk_test_mock
RESEND_API_KEY=re_mock
ALGOLIA_APP_ID=test
ALGOLIA_API_KEY=test
